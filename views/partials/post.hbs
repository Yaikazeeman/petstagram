<div class="post">
    <div class="flex-container post-header">
        <img class="profileimg" src="/images/userPhotos/{{post.postedBy.profileImg}}">
        <p>{{post.postedBy.username}}</p>
        {{#if_eq user._id post.postedBy._id}}
        <a class="delete-link" href="/delete/{{post._id}}" ><img class="delete-icon" src="/images/delete-icon.jpg"></a>
        {{/if_eq}}
    </div>
    <img class="post-img" src="/images/userPhotos/{{post.image}}">
    <div class="caption">
        <p>{{post.caption}}</p>
    </div>
    <div class="flex-container">
        <div class="flex-container likes">
            <img class="post-buttons" src="/images/heart-empty.png">
            <p>{{post.likes}} likes</p>
        </div>
        <div class="flex-container comments">
            <img class="post-buttons" src="/images/comment.png">
            <p>{{post.comments}} comments</p>
        </div>
        <div class="flex-container comments">
            <a>Show more</a>
        </div>
    </div>
</div>

